# input file

num_el   : 50000  # per process; to be multiplied by number of processes
E0       : 20000 # eV
Emin     : 5000 # eV
material : Al
s_tilt   : 70.     # degrees
mode     : DS   # dielectric funct = diel; discrete scattering = DS; cont scattering = cont
