num_BinsE   : 500

# minimum transfer energy only relevant for discrete scattering
Wc       : 10     # eV; Wc = Ec*E0


# detector information
L        :   0
delta    :   0
x_PC     :   0
y_PC     :   0

d_tilt   :   0
